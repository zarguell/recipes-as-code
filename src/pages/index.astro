---
import { readdir } from "fs/promises";
import { resolve } from "path";
import { readFileSync } from "fs";
import { Recipe } from "@tmlmt/cooklang-parser";
import RecipeCard from "../components/RecipeCard.astro";

const recipesDir = resolve("recipes");
const files = await readdir(recipesDir);
const cookFiles = files.filter((f) => f.endsWith(".cook"));

let recipes = await Promise.all(
  cookFiles.map(async (file) => {
    const content = readFileSync(resolve(recipesDir, file), "utf-8");
    let recipe;
    
    try {
      recipe = new Recipe(content);
    } catch (error) {
      console.error(`Error parsing ${file}:`, error.message);
      recipe = {
        metadata: {
          title: file.replace(".cook", ""),
        },
        ingredients: [],
        steps: [],
      };
    }

    return {
      slug: file.replace(".cook", ""),
      file,
      parsed: recipe,
    };
  })
);

// Sort by title or filename
recipes = recipes.sort((a, b) =>
  (a.parsed.metadata.title || a.slug).localeCompare(b.parsed.metadata.title || b.slug)
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Recipes</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        background: #faf9f7;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
      }
      h1 {
        color: #2d3436;
        margin: 0;
      }
      .header-buttons {
        display: flex;
        gap: 1rem;
      }
      .button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #ff6b6b;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.2s;
      }
      .button:hover {
        background: #ee5a52;
      }
      .button.secondary {
        background: #0984e3;
      }
      .button.secondary:hover {
        background: #0770c9;
      }
      .search-box {
        width: 100%;
        max-width: 400px;
        padding: 0.75rem 1rem;
        border: 2px solid #dfe6e9;
        border-radius: 8px;
        font-size: 1rem;
        margin-bottom: 2rem;
        transition: border-color 0.2s;
      }
      .search-box:focus {
        outline: none;
        border-color: #ff6b6b;
      }
      .recipe-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
      }
      .recipe-card.hidden {
        display: none;
      }
      .no-results {
        text-align: center;
        color: #636e72;
        padding: 3rem;
        font-size: 1.1rem;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h1>üç≥ My Recipes</h1>
      <div class="header-buttons">
        <a href={`${import.meta.env.BASE_URL}tags/`} class="button secondary">
          üè∑Ô∏è Browse Tags
        </a>
        <a href={`${import.meta.env.BASE_URL}rss.xml`} class="button" target="_blank">
          üì° RSS Feed
        </a>
      </div>
    </div>

    <input 
      type="search" 
      class="search-box" 
      id="searchBox" 
      placeholder="Search recipes..."
      autocomplete="off"
    />

    <div class="recipe-grid" id="recipeGrid">
      {recipes.map((recipe) => <RecipeCard recipe={recipe} />)}
    </div>

    <div class="no-results" id="noResults" style="display: none;">
      No recipes found. Try a different search.
    </div>

    <script>
		const searchBox = document.getElementById('searchBox');
		const noResults = document.getElementById('noResults');
		const recipeCards = document.querySelectorAll('.recipe-card');

		// Search functionality using data attributes
		searchBox.addEventListener('input', (e) => {
			const search = e.target.value.toLowerCase().trim();
			let visibleCount = 0;
			
			recipeCards.forEach(card => {
			if (search === '') {
				card.classList.remove('hidden');
				visibleCount++;
				return;
			}

			const title = card.dataset.title || '';
			const description = card.dataset.description || '';
			const tags = card.dataset.tags || '';
			
			const matches = 
				title.includes(search) || 
				description.includes(search) ||
				tags.includes(search);
			
			if (matches) {
				card.classList.remove('hidden');
				visibleCount++;
			} else {
				card.classList.add('hidden');
			}
			});

			noResults.style.display = visibleCount === 0 ? 'block' : 'none';
		});
	</script>
  </body>
</html>
