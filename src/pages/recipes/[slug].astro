---
import { readdir } from "fs/promises";
import { resolve } from "path";
import { readFileSync } from "fs";
import { Recipe } from "@tmlmt/cooklang-parser";
import JsonLdSchema from "../../components/JsonLdSchema.astro";
import IngredientList from "../../components/IngredientList.astro";
import RecipeSteps from "../../components/RecipeSteps.astro";

export async function getStaticPaths() {
  const recipesDir = resolve("recipes");
  const files = await readdir(recipesDir);
  const cookFiles = files.filter((f) => f.endsWith(".cook"));

  return cookFiles.map((file) => ({
    params: { slug: file.replace(".cook", "") },
  }));
}

const { slug } = Astro.params;
const recipePath = resolve("recipes", `${slug}.cook`);
const content = readFileSync(recipePath, "utf-8");

let recipe;
let parseError = null;

try {
  recipe = new Recipe(content);
} catch (error) {
  console.error(`Error parsing recipe ${slug}:`, error.message);
  parseError = error.message;
  recipe = {
    metadata: { title: slug },
    ingredients: [],
    steps: [],
  };
}

// Debug what we got
console.log(`Recipe ${slug}:`, JSON.stringify(recipe, null, 2));

const ingredients = recipe.ingredients || [];
const steps = recipe.steps || [];

// Generate JSON-LD schema - fix the quantity mapping
const jsonLd = {
  "@context": "https://schema.org/",
  "@type": "Recipe",
  name: recipe.metadata.title || slug,
  description: recipe.metadata.description || "",
  image: recipe.metadata.image || null,
  prepTime: recipe.metadata["prep-time"] ? `PT${recipe.metadata["prep-time"]}` : null,
  cookTime: recipe.metadata["cook-time"] ? `PT${recipe.metadata["cook-time"]}` : null,
  totalTime: recipe.metadata["total-time"] ? `PT${recipe.metadata["total-time"]}` : null,
  recipeYield: recipe.metadata.servings || null,
  recipeCategory: recipe.metadata.category || null,
  recipeCuisine: recipe.metadata.cuisine || null,
  keywords: (recipe.metadata.tags || []).join(", "),
  author: {
    "@type": "Person",
    name: recipe.metadata.author || "Unknown",
  },
  recipeIngredient: ingredients.map((ing) => {
    let str = ing.name || "";
    if (ing.quantity) {
      // quantity might be an object with value property
      const qty = typeof ing.quantity === 'object' ? ing.quantity.value : ing.quantity;
      str += ` ${qty}`;
      if (ing.units) str += ` ${ing.units}`;
    }
    return str;
  }),
  recipeInstructions: steps.map((step, idx) => ({
    "@type": "HowToStep",
    position: idx + 1,
    text: step.text || step.value || String(step),
  })),
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{recipe.metadata.title || slug}</title>
    <JsonLdSchema schema={jsonLd} />
    <style>
      body {
        font-family: system-ui, sans-serif;
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        background: #faf9f7;
        line-height: 1.6;
      }
      .recipe-header {
        margin-bottom: 2rem;
      }
      h1 {
        color: #2d3436;
        margin: 0 0 0.5rem 0;
      }
      .recipe-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1rem 0;
      }
      .recipe-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin: 1.5rem 0;
      }
      .meta-item {
        background: white;
        padding: 1rem;
        border-radius: 6px;
        border-left: 3px solid #ff6b6b;
      }
      .meta-label {
        font-size: 0.85rem;
        color: #636e72;
        text-transform: uppercase;
        margin-bottom: 0.25rem;
      }
      .meta-value {
        font-weight: bold;
        color: #2d3436;
      }
      .recipe-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin: 2rem 0;
      }
      @media (max-width: 768px) {
        .recipe-content {
          grid-template-columns: 1fr;
        }
      }
      .recipe-section h2 {
        color: #2d3436;
        border-bottom: 2px solid #ff6b6b;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
      }
      a {
        color: #0984e3;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      .error {
        background: #ffe5e5;
        border: 1px solid #ff6b6b;
        padding: 1rem;
        margin: 1rem 0;
        border-radius: 4px;
        color: #d63031;
      }
    </style>
  </head>
  <body>
    <div class="recipe-header">
      <a href={import.meta.env.BASE_URL}>‚Üê Back to recipes</a>
      <h1>{recipe.metadata.title || slug}</h1>
      {recipe.metadata.description && <p>{recipe.metadata.description}</p>}
      {recipe.metadata.image && (
        <img
          src={recipe.metadata.image}
          alt={recipe.metadata.title || slug}
          class="recipe-image"
        />
      )}
    </div>

    {parseError && (
      <div class="error">
        <strong>‚ö†Ô∏è Parse Error:</strong> {parseError}
      </div>
    )}

    <div class="recipe-meta">
      {recipe.metadata?.servings && (
        <div class="meta-item">
          <div class="meta-label">Servings</div>
          <div class="meta-value">{recipe.metadata.servings}</div>
        </div>
      )}
      {recipe.metadata?.["prep-time"] && (
        <div class="meta-item">
          <div class="meta-label">Prep Time</div>
          <div class="meta-value">{recipe.metadata["prep-time"]}</div>
        </div>
      )}
      {recipe.metadata?.["cook-time"] && (
        <div class="meta-item">
          <div class="meta-label">Cook Time</div>
          <div class="meta-value">{recipe.metadata["cook-time"]}</div>
        </div>
      )}
      {recipe.metadata?.["total-time"] && (
        <div class="meta-item">
          <div class="meta-label">Total Time</div>
          <div class="meta-value">{recipe.metadata["total-time"]}</div>
        </div>
      )}
    </div>

    <div class="recipe-content">
      <div class="recipe-section">
        <h2>ü•ò Ingredients</h2>
        {ingredients.length > 0 ? (
          <IngredientList ingredients={ingredients} />
        ) : (
          <p>No ingredients parsed</p>
        )}
      </div>
      <div class="recipe-section">
        <h2>üë®‚Äçüç≥ Instructions</h2>
        {steps.length > 0 ? (
          <RecipeSteps steps={steps} />
        ) : (
          <p>No steps parsed</p>
        )}
      </div>
    </div>
  </body>
</html>
