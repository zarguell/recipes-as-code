---
const { steps } = Astro.props;

// Helper to extract text from step items
function getStepText(items: any[]) {
  if (!items || items.length === 0) return "";
  
  return items
    .map((item, itemIndex) => {
      if (item.type === "text") {
        return item.value;
      }
      if (item.type === "ingredient") {
        return item.displayName || item.name || "";
      }
      if (item.type === "cookware") {
        // Debug log to console
        console.log("Cookware item:", JSON.stringify(item));
        // Try different possible properties
        const name = item.name || item.displayName || item.value?.name || "cookware";
        return `<code class="cookware">${name}</code>`;
      }
      if (item.type === "timer") {
        // Debug log to console
        console.log("Timer item:", JSON.stringify(item));
        // Try to extract timer value from different possible structures
        let time = "";
        let unit = "";
        
        if (item.quantity?.value?.value !== undefined) {
          time = item.quantity.value.value;
          unit = item.unit || item.quantity.unit || "minutes";
        } else if (item.value?.value !== undefined) {
          time = item.value.value;
          unit = item.value.unit || "minutes";
        } else if (item.duration) {
          time = item.duration;
          unit = item.unit || "minutes";
        }
        
        if (time) {
          return `<code class="timer">⏱️ ${time} ${unit}</code>`;
        }
        return `<code class="timer">timer</code>`;
      }
      return "";
    })
    .join("");
}
---

<ol class="steps">
  {steps.map((step: any, idx: number) => (
    <li class="step">
      <div class="step-number">{idx + 1}</div>
      <div class="step-content" set:html={getStepText(step.items || [])} />
    </li>
  ))}
</ol>

<style>
  .steps {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .step {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .step-number {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    background: #ff6b6b;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }

  .step-content {
    padding-top: 0.25rem;
    color: #2d3436;
    line-height: 1.6;
  }

  .step-content :global(code) {
    background: #f8f9fa;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
    border: 1px solid #e9ecef;
  }

  .step-content :global(code.cookware) {
    background: #e3f2fd;
    color: #1976d2;
    border-color: #bbdefb;
  }

  .step-content :global(code.timer) {
    background: #fff3e0;
    color: #e65100;
    border-color: #ffcc80;
  }
</style>
