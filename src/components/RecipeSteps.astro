---
const { steps, cookware = [], timers = [] } = Astro.props;
---

<ol class="steps">
  {steps.map((step: any, idx: number) => {
    // Build the step text here in the map, with direct access to cookware/timers
    const stepHtml = (step.items || [])
      .map((item: any) => {
        if (item.type === "text") {
          return item.value;
        }
        
        if (item.type === "ingredient") {
          return item.displayName || item.name || "";
        }
        
        if (item.type === "cookware") {
          const cookwareItem = cookware[item.value];
          const name = cookwareItem?.name || "cookware";
          return `<code class="cookware">${name}</code>`;
        }
        
        if (item.type === "timer") {
          const timerItem = timers[item.value];
          if (timerItem) {
            const quantity = timerItem.duration?.value?.value || "";
            let unit = timerItem.unit || "minutes";
            
            // Check if unit contains a range (e.g., "minutes|4%minutes")
            if (unit.includes('|')) {
              const parts = unit.split('|');
              const realUnit = parts[0]; // "minutes"
              const secondPart = parts[1]; // "4%minutes"
              
              // Extract the second number from "4%minutes"
              const match = secondPart.match(/^(\d+)%/);
              if (match) {
                const max = match[1];
                return `<code class="timer">⏱️ ${quantity}-${max} ${realUnit}</code>`;
              }
            }
            
            // Normal single value
            return `<code class="timer">⏱️ ${quantity} ${unit}</code>`;
          }
          return `<code class="timer">timer</code>`;
        }
        
        return "";
      })
      .join("");
    
    return (
      <li class="step">
        <input type="checkbox" class="step-checkbox" id={`step-${idx}`} data-step-id={idx} />
        <label for={`step-${idx}`} class="step-label">
          <div class="step-number">{idx + 1}</div>
          <div class="step-content" data-full-text={stepHtml} set:html={stepHtml} />
        </label>
      </li>
    );
  })}
</ol>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const checkboxes = document.querySelectorAll('.step-checkbox');
    
    checkboxes.forEach((checkbox) => {
      checkbox.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        const stepContent = target.parentElement?.querySelector('.step-content') as HTMLElement;
        
        if (!stepContent) return;
        
        const fullText = stepContent.getAttribute('data-full-text') || '';
        const textOnly = stepContent.textContent || '';
        
        if (target.checked) {
          // Truncate to first 30 characters
          const truncated = textOnly.substring(0, 30) + (textOnly.length > 30 ? '...' : '');
          stepContent.textContent = truncated;
        } else {
          // Restore full HTML
          stepContent.innerHTML = fullText;
        }
      });
    });
  });
</script>

<style>
  .steps {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .step {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    transition: max-height 0.3s ease-out, opacity 0.3s ease-out, margin 0.3s ease-out;
    max-height: 500px;
  }

  .step-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .step-checkbox:checked ~ .step-label {
    opacity: 0.3;
  }

  .step-checkbox:checked ~ .step-label .step-content {
    text-decoration: line-through;
  }

  /* Collapse the step when checked */
  .step-checkbox:checked {
    margin-top: 0;
  }

  .step:has(.step-checkbox:checked) {
    max-height: 30px;
    margin-bottom: 0.5rem;
  }

  .step-label {
    display: flex;
    gap: 1rem;
    flex: 1;
    cursor: pointer;
    min-width: 0;
  }

  .step-number {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    background: #ff6b6b;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    transition: background 0.2s;
  }

  .step-checkbox:checked ~ .step-label .step-number {
    background: #95a5a6;
  }

  .step-content {
    padding-top: 0.25rem;
    color: #2d3436;
    line-height: 1.6;
    min-width: 0;
    flex: 1;
  }

  .step-content :global(code) {
    background: #f8f9fa;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 0.9em;
    border: 1px solid #e9ecef;
  }

  .step-content :global(code.cookware) {
    background: #e3f2fd;
    color: #1976d2;
    border-color: #bbdefb;
  }

  .step-content :global(code.timer) {
    background: #fff3e0;
    color: #e65100;
    border-color: #ffcc80;
  }
</style>
