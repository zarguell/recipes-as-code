---
const { ingredients } = Astro.props;
---

<ul class="ingredient-list">
  {ingredients.map((ing: any) => {
    // Handle quantity being an object with value property
    let quantityText = "";
    if (ing.quantity) {
      const qty = typeof ing.quantity === 'object' ? ing.quantity.value : ing.quantity;
      quantityText = `${qty}${ing.units ? ` ${ing.units}` : ""}`;
    }
    
    return (
      <li class="ingredient">
        <span class="ingredient-name">{ing.name}</span>
        {quantityText && (
          <span class="ingredient-quantity">{quantityText}</span>
        )}
      </li>
    );
  })}
</ul>

<style>
  .ingredient-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredient {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid #ecf0f1;
  }

  .ingredient:last-child {
    border-bottom: none;
  }

  .ingredient-name {
    color: #2d3436;
    font-weight: 500;
  }

  .ingredient-quantity {
    color: #636e72;
    font-size: 0.9rem;
    background: #f5f5f5;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }
</style>
