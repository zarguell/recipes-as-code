---
const { ingredients } = Astro.props;

// Helper functions for fraction conversion
function gcd(a, b) {
  a = Math.abs(a); b = Math.abs(b);
  while (b) [a, b] = [b, a % b];
  return a || 1;
}

function formatFraction(num, den) {
  if (den === 1) return String(num);
  if (num > den) {
    const whole = Math.floor(num / den);
    const remainder = num % den;
    return remainder === 0 ? String(whole) : `${whole} ${remainder}/${den}`;
  }
  return `${num}/${den}`;
}

// Normalize to a numeric base for scaling + store fraction parts when available
function getBaseQty(ing: any) {
  const v = ing?.quantity?.value;

  // Handle direct fraction syntax like {1/2%cup}
  if (v && typeof v === "object" && v.type === "fraction") {
    const num = v.num;
    const den = v.den;
    if (typeof num === "number" && typeof den === "number") {
      const simplifiedNum = num / gcd(num, den);
      const simplifiedDen = den / gcd(num, den);
      return {
        base: num / den,
        kind: "fraction",
        display: formatFraction(simplifiedNum, simplifiedDen)
      };
    }
  }

  // Handle mixed number syntax like {1%cup}
  if (v && typeof v === "object" && v.type === "number" && typeof v.value === "number") {
    return {
      base: v.value,
      kind: "number",
      display: String(v.value)
    };
  }

  // Handle simple decimal
  if (typeof v === "number") {
    return { base: v, kind: "decimal", display: String(v) };
  }

  // Handle quantity.value.value case (nested structure)
  const nested = ing?.quantity?.value?.value;
  if (nested && typeof nested === "object" && nested.type === "fraction") {
    const num = nested.num;
    const den = nested.den;
    if (typeof num === "number" && typeof den === "number") {
      const simplifiedNum = num / gcd(num, den);
      const simplifiedDen = den / gcd(num, den);
      return {
        base: num / den,
        kind: "fraction",
        display: formatFraction(simplifiedNum, simplifiedDen)
      };
    }
  }

  if (nested && typeof nested === "number") {
    return {
      base: nested,
      kind: "decimal",
      display: String(nested)
    };
  }

  // Some recipes may not have numeric quantity
  return { base: null, kind: "", display: "" };
}
---

<ul class="ingredient-list" id="ingredientList">
  {ingredients.map((ing: any, idx: number) => {
    const q = getBaseQty(ing);
    const unit = ing.unit || "";

    return (
      <li class="ingredient">
        <input type="checkbox" class="ingredient-checkbox" id={`ingredient-${idx}`} />
        <label for={`ingredient-${idx}`} class="ingredient-content">
          <span class="ingredient-name">{ing.name}</span>

          <span
            class="ingredient-quantity"
            data-role="qty"
            data-base={q.base !== null ? String(q.base) : ""}
            data-unit={unit}
          >
            {q.display ? `${q.display}${unit ? ` ${unit}` : ""}` : ""}
          </span>
        </label>
      </li>
    );
  })}
</ul>

<style>
  .ingredient-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredient {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
    transition: opacity 0.3s;
  }

  .ingredient:last-child {
    border-bottom: none;
  }

  .ingredient-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    flex-shrink: 0;
  }

  .ingredient-checkbox:checked ~ .ingredient-content {
    opacity: 0.4;
    text-decoration: line-through;
  }

  .ingredient-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
    cursor: pointer;
    gap: 1rem;
    min-width: 0;
  }

  .ingredient-name {
    color: var(--text);
    font-weight: 500;
  }

  .ingredient-quantity {
    color: var(--muted);
    font-size: 0.9rem;
    background: var(--surface);
    border: 1px solid var(--border);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    white-space: nowrap;
  }
</style>
