---
const { ingredients } = Astro.props;

// Normalize to a numeric base for scaling + store fraction parts when available
function getBaseQty(ing: any) {
  const v = ing?.quantity?.value?.value;

  // Decimal quantity from parser
  if (typeof v === "number") {
    return { base: v, kind: "decimal", num: "", den: "" };
  }

  // Fraction quantity from parser
  if (v && v.type === "fraction" && typeof v.num === "number" && typeof v.den === "number") {
    return { base: v.num / v.den, kind: "fraction", num: String(v.num), den: String(v.den) };
  }

  // Some recipes may not have numeric quantity
  return { base: null, kind: "", num: "", den: "" };
}
---

<ul class="ingredient-list" id="ingredientList">
  {ingredients.map((ing: any, idx: number) => {
    const q = getBaseQty(ing);
    const unit = ing.unit || "";

    return (
      <li class="ingredient">
        <input type="checkbox" class="ingredient-checkbox" id={`ingredient-${idx}`} />
        <label for={`ingredient-${idx}`} class="ingredient-content">
          <span class="ingredient-name">{ing.name}</span>

          <span
            class="ingredient-quantity"
            data-role="qty"
            data-base={q.base !== null ? String(q.base) : ""}
            data-unit={unit}
          >
            {q.base !== null ? `${q.base}${unit ? ` ${unit}` : ""}` : ""}
          </span>
        </label>
      </li>
    );
  })}
</ul>

<style>
  .ingredient-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredient {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #ecf0f1;
    transition: opacity 0.3s;
  }

  .ingredient:last-child {
    border-bottom: none;
  }

  .ingredient-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    flex-shrink: 0;
  }

  .ingredient-checkbox:checked ~ .ingredient-content {
    opacity: 0.4;
    text-decoration: line-through;
  }

  .ingredient-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
    cursor: pointer;
    gap: 1rem;
    min-width: 0;
  }

  .ingredient-name {
    color: #2d3436;
    font-weight: 500;
  }

  .ingredient-quantity {
    color: #636e72;
    font-size: 0.9rem;
    background: #f5f5f5;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    white-space: nowrap;
  }
</style>
