---
const { ingredients } = Astro.props;
---

<ul class="ingredient-list">
  {ingredients.map((ing: any, idx: number) => {
    let quantityText = "";
    if (ing.quantity?.value?.value !== undefined) {
      const qty = ing.quantity.value.value;
      quantityText = `${qty}${ing.unit ? ` ${ing.unit}` : ""}`;
    }
    
    return (
      <li class="ingredient">
        <input type="checkbox" class="ingredient-checkbox" id={`ingredient-${idx}`} />
        <label for={`ingredient-${idx}`} class="ingredient-content">
          <span class="ingredient-name">{ing.name}</span>
          {quantityText && (
            <span class="ingredient-quantity">{quantityText}</span>
          )}
        </label>
      </li>
    );
  })}
</ul>

<style>
  .ingredient-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ingredient {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #ecf0f1;
    transition: opacity 0.3s;
  }

  .ingredient:last-child {
    border-bottom: none;
  }

  .ingredient-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    flex-shrink: 0;
  }

  .ingredient-checkbox:checked ~ .ingredient-content {
    opacity: 0.4;
    text-decoration: line-through;
  }

  .ingredient-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
    cursor: pointer;
  }

  .ingredient-name {
    color: #2d3436;
    font-weight: 500;
  }

  .ingredient-quantity {
    color: #636e72;
    font-size: 0.9rem;
    background: #f5f5f5;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }
</style>
